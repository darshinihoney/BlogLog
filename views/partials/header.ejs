<header class="header">
  <a href="/" class="header__logo">BlogLog</a>

  <nav class="header__nav">
    <ul>
      <li>
        <a href="/" class="<%= isActiveRoute('/', currentRoute) %>">Home</a>
      </li>
      <li>
        <a href="/about" class="<%= isActiveRoute('/about', currentRoute) %>">About</a>
      </li>
      <li>
        <a href="/contact" class="<%= isActiveRoute('/contact', currentRoute) %>">Contact</a>
      </li>
    <li>
        <% if(locals.user?.admin) { %>
          <a href="/add-post" class="<%= isActiveRoute('/add-post', currentRoute) %>">Post</a>
        <% }  else { %>
          <a href="/posts" class="<%= isActiveRoute('/posts', currentRoute) %>">Posts</a>
        <% } %>
      </li>
    </ul>

  </nav>

  <div class="header__button">
        
      <% if (locals.user) { %>
        <button id="LogIn"><a style="text-decoration: none;" href="/logout">Log Out</a></button>
      <% } else { %>
        <button id="LogIn" onclick="window.location.href = '/login'">Log In</button>
      <% } %>
      
       <!-- Dark Mode Toggle Button -->
      <button id="dark-mode-toggle" style="margin-left: 0.5rem;">
        <i class="fa-solid" id="dark-icon"></i>
      </button>
   

  </div>

</header>

